<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite"
    tools:context=".view.fragment.ProductDetailsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="60dp"
            >

    <androidx.cardview.widget.CardView
        android:id="@+id/test_card_view"
        android:layout_width="wrap_content"
        android:layout_height="530dp"
        app:cardCornerRadius="20dp"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/product_image_view"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:src="@drawable/card_back_image"
        android:scaleType="centerCrop"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_favorite"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        app:backgroundTint="@color/colorWhite"
        app:tint="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/category_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/test_card_view"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/cantarell_bold"
                android:text="Biscuits"
                android:textColor="@color/colorPurple"

                />
    <TextView
        android:id="@+id/sweet_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/category_text_view"
        android:fontFamily="@font/acme"
        android:textSize="4mm"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="10dp"
        android:text="Biscuits with chocolate"
        android:textColor="@color/colorBlack"
        />

     <TextView
         android:id="@+id/price_text_view"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/sweet_name_text_view"
         android:text="2500 AMD"
         android:fontFamily="@font/cantarell_bold"
         android:textColor="@color/colorPrimary"
         android:layout_marginLeft="30dp"
         android:layout_marginTop="20dp"
         />
    <TextView
        android:id="@+id/description_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/price_text_view"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Napoleon Cake is traditional French dessert
        (Mille-feuille) that consists of several, flaky and crispy
        layers of Puff Puff Pastry filled with thick layers of pastry
         cream, with the top layer being covered in powdered sugar glaze
         with swirls of chocolate sugar glaze."
        android:fontFamily="@font/cantarell"
        />
    <TextView
        android:id="@+id/ingedient_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/description_text_view"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:text="Ingredience"
        android:textColor="@color/colorBlack"
        android:fontFamily="@font/cantarell_bold"
        />
    <TextView
        android:id="@+id/ingredient_desc_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ingedient_text_view"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:text="Shugar,glasure ..."
        android:fontFamily="@font/cantarell"
        />
    <TextView
        android:id="@+id/shelf_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ingredient_desc_text_view"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:text="Shelf Life"
        android:textColor="@color/colorBlack"
        android:fontFamily="@font/cantarell_bold"
        />

            <TextView
                android:id="@+id/shelf_info_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/shelf_text_view"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/cantarell"
                android:text="12 months"
                android:layout_marginBottom="80dp"
                />

        </RelativeLayout>
    </ScrollView>



    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/add_to_basket_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:text="Add to Basket"
        android:textColor="@color/colorWhite"
        app:fabCustomSize="55dp"
        app:backgroundTint="@color/colorPrimary"
        app:icon="@drawable/ic_add_to_basket"
        app:iconTint="@color/colorWhite"
        />

</RelativeLayout>